        //-     a(href=`/folder/${e.id}`).doc
        //-       .folder-img
        //-         .folder-icn
        //-       .doc-title=e.name
        //- - }
        - for(e of publicFiles){
            a(href=`/texteditor/${e.id}` draggable='true' ondragstart='drag(event)').doc
              .doc-img
                .doc-icn
              .doc-title=e.name
        - }